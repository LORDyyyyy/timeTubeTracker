{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "rootDir": "./src",
        "moduleResolution": "node",
        // "sourceMap": true,
        // "inlineSourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "./node_modules",
        "./dist"
    ]
}
